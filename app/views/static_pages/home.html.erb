<%= provide :title, "Home"%>
<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %> | Oversource</title>
</head>
<body>
  <div class="center jumbotron">
    <h1>Oversource</h1>
    <p>
      This is the home page for the Oversource application.
    </p>
    <% if logged_in?  %>
      <%= link_to "START CLICKING", user_path(@user), class: 'btn btn-lg btn-primary' %>
    <% else  %>
      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    <% end  %>
  </div>
</body>
</html>